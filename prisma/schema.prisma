// Agency Hub Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ==================== USERS & AUTH ====================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("TEAM") // ADMIN or TEAM
  skills    String   @default("[]") // JSON array of skills
  capacity  Int      @default(100) // Percentage available
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  assignedThreads   Thread[]         @relation("AssignedTo")
  assignedTasks     Task[]           @relation("TaskAssignee")
  draftedResponses  Response[]       @relation("DraftedBy")
  approvedResponses Response[]       @relation("ApprovedBy")
  notifications     Notification[]
  internalNotes     InternalNote[]
  chatMessages      ChatMessage[]    @relation("ChatAuthor")
  chatReactions     ChatReaction[]
  notes             Note[]           @relation("NoteAuthor")
  timeEntries       TimeEntry[]
  attachments       Attachment[]
  activities        Activity[]
  taskComments      TaskComment[]    @relation("CommentAuthor")
  createdEvents     CalendarEvent[]  @relation("EventCreator")
  eventAttendees    EventAttendee[]

  @@map("users")
}

// ==================== CLIENTS ====================

model Client {
  id                  String    @id @default(cuid())
  name                String
  domain              String?   @unique
  status              String    @default("ACTIVE") // ACTIVE, PAUSED, CHURNED
  communicationPrefs  String    @default("{}") // JSON: tone, frequency, etc.
  satisfactionSignals String    @default("{}") // JSON: sentiment trends
  slaOverrides        String?   // JSON: custom SLA rules
  knowledgeBase       String    @default("[]") // JSON: brand guidelines, specs, etc.
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Relations
  contacts Contact[]
  projects Project[]
  threads  Thread[]

  @@map("clients")
}

model Contact {
  id        String   @id @default(cuid())
  email     String
  name      String
  role      String?
  isPrimary Boolean  @default(false)
  clientId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([email, clientId])
  @@map("contacts")
}

// ==================== PROJECTS ====================

model Project {
  id             String   @id @default(cuid())
  name           String
  description    String?
  status         String   @default("ACTIVE") // ACTIVE, ON_HOLD, COMPLETED, CANCELLED
  health         String   @default("ON_TRACK") // ON_TRACK, NEEDS_ATTENTION, AT_RISK
  healthScore    Int      @default(100)
  aiSummary      String?  // AI-generated current status summary
  aiPlan         String?  // JSON: AI-generated task plan
  risks          String   @default("[]") // JSON: identified risks
  defaultOwnerId String?
  clientId       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  client         Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  threads        Thread[]
  tasks          Task[]
  chatMessages   ChatMessage[]
  notes          Note[]
  milestones     Milestone[]
  timeEntries    TimeEntry[]
  activities     Activity[]
  calendarEvents CalendarEvent[]

  @@map("projects")
}

model Task {
  id             String    @id @default(cuid())
  title          String
  description    String?   // Brief description/summary
  content        String?   @default("[]") // JSON: Block-based rich content (Notion-like)
  status         String    @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, BLOCKED
  priority       String    @default("NORMAL") // CRITICAL, HIGH, NORMAL, LOW
  category       String    @default("UPCOMING") // IMMEDIATE, THIS_WEEK, UPCOMING, WAITING_CLIENT, WAITING_US
  
  // Notion-like page properties
  isPage         Boolean   @default(false) // Treat as a page with subpages
  icon           String?   // Emoji or icon URL
  coverImage     String?   // Cover image URL
  properties     String    @default("{}") // JSON: Custom properties/fields
  
  // Hierarchy
  parentId       String?   // For subpages/subtasks
  
  estimatedTime  String?
  dueDate        DateTime?
  completedAt    DateTime?
  sourceThreadId String?
  blockedBy      String?
  aiGenerated    Boolean   @default(false)
  position       Int       @default(0) // For Kanban board ordering
  projectId      String
  assigneeId     String?
  milestoneId    String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?         @relation("TaskAssignee", fields: [assigneeId], references: [id])
  milestone   Milestone?    @relation("MilestoneTasks", fields: [milestoneId], references: [id])
  comments    TaskComment[]
  timeEntries TimeEntry[]
  
  // Self-relation for subpages/subtasks
  parent      Task?         @relation("TaskSubpages", fields: [parentId], references: [id], onDelete: Cascade)
  subpages    Task[]        @relation("TaskSubpages")

  @@index([parentId])
  @@index([projectId, parentId])
  @@map("tasks")
}

// ==================== THREADS & MESSAGES ====================

model Thread {
  id                 String    @id @default(cuid())
  subject            String
  status             String    @default("OPEN") // OPEN, AWAITING_RESPONSE, RESOLVED, SNOOZED
  priority           String    @default("NORMAL") // CRITICAL, HIGH, NORMAL, LOW
  intent             String?   // AI-classified intent
  sentiment          String?   // AI-detected sentiment
  urgencyReason      String?
  lastActivityAt     DateTime  @default(now())
  snoozedUntil       DateTime?
  slaDeadline        DateTime?
  slaBreached        Boolean   @default(false)
  aiAnalysis         String?   // JSON: full AI analysis result
  matchConfidence    Float     @default(0)
  matchReason        String?
  needsTriage        Boolean   @default(false)
  clientId           String?
  projectId          String?
  assignedToId       String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Relations
  client        Client?        @relation(fields: [clientId], references: [id])
  project       Project?       @relation(fields: [projectId], references: [id])
  assignedTo    User?          @relation("AssignedTo", fields: [assignedToId], references: [id])
  messages      Message[]
  responses     Response[]
  internalNotes InternalNote[]

  @@map("threads")
}

model Message {
  id             String   @id @default(cuid())
  direction      String   // INBOUND or OUTBOUND
  senderEmail    String
  senderName     String?
  subject        String?
  bodyText       String
  bodyHtml       String?
  rawEmail       String?  // Original email content preserved
  headers        String?  // JSON: email headers
  receivedAt     DateTime @default(now())
  processedAt    DateTime?
  aiExtracted    String?  // JSON: AI-extracted data
  threadId       String
  createdAt      DateTime @default(now())

  // Relations
  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model InternalNote {
  id        String   @id @default(cuid())
  content   String
  threadId  String
  authorId  String
  createdAt DateTime @default(now())

  // Relations
  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  author User   @relation(fields: [authorId], references: [id])

  @@map("internal_notes")
}

// ==================== RESPONSES & APPROVAL ====================

model Response {
  id               String    @id @default(cuid())
  status           String    @default("DRAFT") // DRAFT, PENDING_APPROVAL, APPROVED, REJECTED, SENT
  subject          String
  body             String
  tone             String?
  aiGenerated      Boolean   @default(false)
  aiOptions        String?   // JSON: alternative AI drafts
  rejectionReason  String?
  approvedAt       DateTime?
  sentAt           DateTime?
  threadId         String
  draftedById      String
  approvedById     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  thread     Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  draftedBy  User   @relation("DraftedBy", fields: [draftedById], references: [id])
  approvedBy User?  @relation("ApprovedBy", fields: [approvedById], references: [id])

  @@map("responses")
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id        String    @id @default(cuid())
  type      String    // THREAD_ASSIGNED, RESPONSE_APPROVED, ESCALATION, etc.
  title     String
  message   String
  data      String?   // JSON: additional context
  read      Boolean   @default(false)
  readAt    DateTime?
  userId    String
  createdAt DateTime  @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// ==================== CONFIGURATION ====================

model AssignmentRule {
  id         String   @id @default(cuid())
  name       String
  type       String   // SKILL, CLIENT, PROJECT, LOAD_BALANCE
  conditions String   // JSON: rule conditions
  assignToId String?
  priority   Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("assignment_rules")
}

model Template {
  id        String   @id @default(cuid())
  name      String
  category  String   // GREETING, ACKNOWLEDGMENT, FOLLOW_UP, etc.
  subject   String?
  body      String
  variables String   @default("[]") // JSON: available variables
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("templates")
}

// ==================== UNMATCHED QUEUE ====================

model UnmatchedEmail {
  id               String   @id @default(cuid())
  senderEmail      String
  senderName       String?
  subject          String
  bodyText         String
  bodyHtml         String?
  rawEmail         String?
  suggestedClients String?  // JSON: AI suggestions
  suggestedProjects String? // JSON: AI suggestions
  status           String   @default("PENDING") // PENDING, RESOLVED, IGNORED
  resolvedAt       DateTime?
  createdAt        DateTime @default(now())

  @@map("unmatched_emails")
}

// ==================== PROJECT CHAT ====================

model ChatMessage {
  id        String    @id @default(cuid())
  content   String
  type      String    @default("TEXT") // TEXT, FILE, SYSTEM
  metadata  String?   // JSON: file info, mentions, etc.
  isEdited  Boolean   @default(false)
  editedAt  DateTime?
  parentId  String?   // For thread replies
  projectId String
  authorId  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  project   Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  author    User           @relation("ChatAuthor", fields: [authorId], references: [id])
  parent    ChatMessage?   @relation("ChatReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   ChatMessage[]  @relation("ChatReplies")
  reactions ChatReaction[]

  @@map("chat_messages")
}

model ChatReaction {
  id        String   @id @default(cuid())
  emoji     String
  messageId String
  userId    String
  createdAt DateTime @default(now())

  // Relations
  message ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id])

  @@unique([messageId, userId, emoji])
  @@map("chat_reactions")
}

// ==================== NOTES & DOCUMENTS ====================

model Note {
  id          String    @id @default(cuid())
  title       String
  content     String    // Rich text / Markdown content
  type        String    @default("NOTE") // NOTE, MEETING_NOTES, WIKI, DOC
  isPinned    Boolean   @default(false)
  tags        String    @default("[]") // JSON array of tags
  projectId   String
  authorId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  author  User    @relation("NoteAuthor", fields: [authorId], references: [id])

  @@map("notes")
}

// ==================== MILESTONES ====================

model Milestone {
  id          String    @id @default(cuid())
  name        String
  description String?
  dueDate     DateTime
  status      String    @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, OVERDUE
  completedAt DateTime?
  color       String    @default("#3B82F6") // For visual distinction
  projectId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   Task[]  @relation("MilestoneTasks")

  @@map("milestones")
}

// ==================== TIME TRACKING ====================

model TimeEntry {
  id          String    @id @default(cuid())
  description String?
  duration    Int       // Duration in minutes
  date        DateTime  @default(now())
  billable    Boolean   @default(true)
  taskId      String?
  projectId   String
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  task    Task?   @relation(fields: [taskId], references: [id], onDelete: SetNull)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@map("time_entries")
}

// ==================== FILE ATTACHMENTS ====================

model Attachment {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int      // Size in bytes
  path         String   // Storage path or URL
  thumbnailPath String? // For images
  entityType   String   // PROJECT, TASK, CHAT, NOTE
  entityId     String
  uploadedById String
  createdAt    DateTime @default(now())

  // Relations
  uploadedBy User @relation(fields: [uploadedById], references: [id])

  @@map("attachments")
}

// ==================== ACTIVITY FEED ====================

model Activity {
  id         String   @id @default(cuid())
  type       String   // TASK_CREATED, TASK_COMPLETED, CHAT_MESSAGE, NOTE_CREATED, etc.
  action     String   // created, updated, deleted, completed, commented
  entityType String   // TASK, PROJECT, THREAD, NOTE, MILESTONE, etc.
  entityId   String
  entityName String?  // Display name of the entity
  metadata   String?  // JSON: additional context
  projectId  String?
  userId     String
  createdAt  DateTime @default(now())

  // Relations
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id])

  @@index([projectId, createdAt])
  @@map("activities")
}

// ==================== TASK COMMENTS ====================

model TaskComment {
  id        String   @id @default(cuid())
  content   String
  mentions  String   @default("[]") // JSON: array of mentioned user IDs
  taskId    String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author User @relation("CommentAuthor", fields: [authorId], references: [id])

  @@map("task_comments")
}

// ==================== CALENDAR & MEETINGS ====================

model CalendarEvent {
  id          String    @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        String    @default("MEETING") // MEETING, DEADLINE, REMINDER, MILESTONE
  location    String?   // Physical location or video call link
  isAllDay    Boolean   @default(false)
  color       String    @default("#3B82F6")
  recurrence  String?   // JSON: recurrence rules
  projectId   String?
  createdById String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project     Project?          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy   User              @relation("EventCreator", fields: [createdById], references: [id])
  attendees   EventAttendee[]

  @@map("calendar_events")
}

model EventAttendee {
  id        String   @id @default(cuid())
  status    String   @default("PENDING") // PENDING, ACCEPTED, DECLINED, TENTATIVE
  eventId   String
  userId    String
  createdAt DateTime @default(now())

  // Relations
  event CalendarEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User          @relation(fields: [userId], references: [id])

  @@unique([eventId, userId])
  @@map("event_attendees")
}
